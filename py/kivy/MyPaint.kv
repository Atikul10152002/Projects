#: import FadeTransition kivy.uix.screenmanager.FadeTransition


ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    GameScreen:


<Button>:
    font_size: ((root.width/3)+(root.height/3))/2


<MainScreen>:
    name:"main"
    id: mainscreen

    GridLayout:
        cols:1
        Image:
            source: 'wall.png'
            keep_ratio: False
            allow_stretch: True
            opacity: 0.8
            # size_hint: 1, 1
            # pos_hint: {'right': 0.5, 'top': 0.75}
    FloatLayout:
        Button:
            size_hint: .3,.1
            on_release: app.root.current = "game"
            text: "Start"
            color: 1, 1, 0, 1
            background_color: 0, 0, .5, 1
            border: 15,16,16,10
            pos: root.width/2-self.width/2,root.height/2-self.height/2 
 
<Rect>:
    id: rect
    canvas:
        Rectangle:
            # size: 50,50
            size: self._width,self._height
            pos: self.pos
        

<GameScreen>:
    id: gamescreen
    name:"game"
    Widg
            